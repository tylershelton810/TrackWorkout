<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrackWorkout.Pages.Client.PickExercise"
             BackgroundColor="#f5f5f5"
             Title="Pick Exercises">
    <ContentPage.Content>

       

        <StackLayout x:Name="rootLayout" VerticalOptions="FillAndExpand" Spacing="0">

            <StackLayout VerticalOptions="FillAndExpand" BackgroundColor="#f5f5f5" >

                <ScrollView x:Name="myScroll" VerticalOptions="StartAndExpand" >
                    <StackLayout x:Name="gridStack" >


                    </StackLayout>

                </ScrollView>

            </StackLayout>
            <Frame Padding="0" HasShadow="True" x:Name="addExercisesFrame">
                <Button x:Name="addExercises" Clicked="addExercisesClick" Text="Add selected exercises to routine" VerticalOptions="EndAndExpand" HeightRequest="60" BackgroundColor="#5bdcb6" TextColor="White"></Button>
            </Frame>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>