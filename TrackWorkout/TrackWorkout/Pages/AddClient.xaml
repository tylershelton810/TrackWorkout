<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrackWorkout.Pages.AddClient"
             BackgroundColor="White">
    <ContentPage.Content>
        <StackLayout Margin="20,35,20,20" VerticalOptions="Center" >
            <Entry x:Name="ClientEmail" Placeholder="(Please enter your clients Email Address)" MaxLength="100" PlaceholderColor="#363636" TextColor="#363636"/>

            <Button 
            Clicked="SubmitClicked" 
            Text="Submit" TextColor="White" FontAttributes="Bold" FontSize="Large"
            BackgroundColor="#5bc2dc"            
            HeightRequest="75"
            />


        </StackLayout>
    </ContentPage.Content>
</ContentPage>