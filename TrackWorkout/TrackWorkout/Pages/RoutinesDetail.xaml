<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrackWorkout.Pages.RoutinesDetail"             
             Title="Routines">
    <ContentPage.Content>

        <StackLayout x:Name="rootLayout" VerticalOptions="FillAndExpand" Spacing="0">
            <StackLayout VerticalOptions="StartAndExpand" BackgroundColor="#f5f5f5" Spacing="0">
                <ScrollView x:Name="myScroll" VerticalOptions="FillAndExpand" >
                    <StackLayout x:Name="gridStack" Spacing="0">

                    </StackLayout>

                </ScrollView>
            </StackLayout>

            <Button x:Name="addButton" Clicked="AddNewRoutine"   Text="Add a new routine" VerticalOptions="EndAndExpand" HeightRequest="75" BackgroundColor="#5bc2dc" TextColor="White"></Button>
        </StackLayout>


    </ContentPage.Content>
</ContentPage>