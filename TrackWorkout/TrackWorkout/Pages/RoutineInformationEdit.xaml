<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrackWorkout.Pages.RoutineInformationEdit"
             BackgroundColor="#f5f5f5">
    <ContentPage.Content>
        <StackLayout x:Name="rootLayout" VerticalOptions="FillAndExpand" Spacing="0">
            <StackLayout VerticalOptions="StartAndExpand" x:Name="HeaderLayout" BackgroundColor="#5bc2dc" Spacing="0">

            </StackLayout>
           
            <StackLayout VerticalOptions="FillAndExpand" BackgroundColor="#f5f5f5">
                
                <ScrollView x:Name="myScroll" VerticalOptions="StartAndExpand">
                    <StackLayout x:Name="gridStack" >
                     
                    </StackLayout>
                   
                 
                </ScrollView>
            </StackLayout>
            <StackLayout VerticalOptions="EndAndExpand">
                <Frame Padding="0" HasShadow="True">
                    <Entry x:Name="RoutineName" Placeholder="Routine Name" VerticalOptions="StartAndExpand" HeightRequest="60"/>
                </Frame>
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>